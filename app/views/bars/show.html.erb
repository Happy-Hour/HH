<section class="bar-info">
  <p class="bar-address"><i class="fa fa-map-marker"></i> <%= @bar.address %></p>
  <p class="bar-tel"><i class="fa fa-chevron-circle-right"></i> <%= @bar.contact_2 %></p>
        
